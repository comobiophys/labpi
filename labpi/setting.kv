<SettingScreen>:
    canvas.before:
        Color:
            rgba: 0.92, 0.92, 0.92, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size

    Button:
        background_color: 1, 1, 1, 0
        size_hint: None, None
        size: 50, 50
        pos: 50, 30
        on_press: root.manager.changeScreen('load')
        Image:
            source: 'img/back.png'
            size: 50, 50
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True

    BoxLayout:
        size_hint: None, None
        size: root.width * 9/10, root.height * 7/10
        pos: root.width /20, root.height * 2/10
        spacing: 10
        orientation: "vertical"

        ScrollView:
            id: config_layout
            size_hint: None, None
            size: self.parent.width, self.parent.height
            canvas.after:
                Color:
                    rgb: 0.8, 0.8, 0.8, 1
                Line:
                    rectangle: self.x,self.y,self.width,self.height
            GridLayout:
                cols: 1
                size_hint_y: None
                height: box_1.height + box_2.height
                spacing: 20
                BoxLayout:
                    id: box_1
                    orientation: "vertical"
                    size_hint_y: None
                    height: 25 + 40*2
                    spacing: 10
                    canvas.before:
                        Color:
                            rgba: 1,1,1,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: ' NVT Equilibration '
                        color: 1,1,1,1
                        size_hint_y: None
                        height: 25
                        canvas.before:
                            Color:
                                rgba: 0, 0.588, 0.533, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    BoxLayout:
                        size_hint_y: None
                        height: 30
                        padding: 30,0,0,0
                        Label:
                            text: ' Total time (ps): '
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        TextInput:
                            size_hint: None, 1
                            width: 100
                            pos_hint: {'center_y': 0.5}
                            text: '500'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'

                    BoxLayout:
                        size_hint_y: None
                        height: 30
                        padding: 30,0,0,0
                        Label:
                            text: ' period of time (fs)'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        TextInput:
                            size_hint: None, 1
                            width: 100
                            pos_hint: {'center_y': 0.5}
                            text: '0.02'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'

                BoxLayout:
                    id: box_2
                    orientation: "vertical"
                    size_hint_y: None
                    height: 25 + 40*2
                    spacing: 10
                    canvas.before:
                        Color:
                            rgba: 1,1,1,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: ' NVT Equilibration '
                        color: 1,1,1,1
                        size_hint_y: None
                        height: 25
                        canvas.before:
                            Color:
                                rgba: 0, 0.588, 0.533, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    BoxLayout:
                        size_hint_y: None
                        height: 30
                        padding: 30,0,0,0
                        Label:
                            text: ' Total time (ps): '
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        TextInput:
                            size_hint: None, 1
                            width: 100
                            pos_hint: {'center_y': 0.5}
                            text: '500'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'

                    BoxLayout:
                        size_hint_y: None
                        height: 30
                        padding: 30,0,0,0
                        Label:
                            text: ' period of time (fs)'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        TextInput:
                            size_hint: None, 1
                            width: 100
                            pos_hint: {'center_y': 0.5}
                            text: '0.02'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'