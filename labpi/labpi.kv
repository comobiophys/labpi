#---------------------------------------------------#
# Item listview
[LoadListItem@SelectableView+BoxLayout]:
    cbLayout: cb_layout
    size_hint_y: None
    height: 40 + 30*len(ctx.pdbFile.chains) + 1
    BoxLayout:
        id: item_id
        orientation: "vertical"
        size_hint_y: None
        height: 40 + 30*len(ctx.pdbFile.chains) + 1
        # canvas.before:
        #     Color:
        #         rgba: 0, 0.94, 0.94, 1
        #     Rectangle:
        #         pos: self.pos
        #         size: self.size
        BoxLayout:
            size_hint: 1, None
            height: 40
            FloatLayout:
                size_hint_x: None
                width: 30
                padding: 10, 0, 0, 0
                Image:
                    source: 'img/file.png'
                    size: 20, 20
                    allow_stretch: True
                    size_hint: None, None
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            BoxLayout:
                size_hint_x: 1.5
                Label:
                    text_size: self.width, None
                    color: 0,0,0,1
                    font_size: '16sp'            
                    text: ctx.text
                    valign: 'middle'
            
            Button:
                size_hint_x: 0.5
                background_color: 1, 1, 1, 0
                on_press: ctx.remove_item(ctx.item_id, ctx.list_id, ctx.pdbFile)
                Image:
                    source: 'img/remove.png'
                    size: 20, 20
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    allow_stretch: True

        BoxLayout:
            id: cb_layout
            orientation: "vertical"
            # size_hint_y: None
            # height: 50

        BoxLayout:
            size_hint_y: None
            height: 1
            canvas.before:
                Color:
                    rgba: 0.92, 0.92, 0.92, 1
                Rectangle:
                    pos: self.pos
                    size: self.size


<ItemCheckBox>:
    chainName: chain_name
    chainBox: chain_box
    spacing: 20
