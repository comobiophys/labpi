<GroupCheckBox>:
    chainName: chain_name
    chainBox: chain_box
    resdiueFrom: resdiue_from
    resdiueTo: resdiue_to

    padding: 0, 5, 10, 5
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 40  
            CheckBox:
                id: chain_box
                size_hint_x: None
                width: 50
                active: True
            Label:
                id: chain_name
                text: ''
                color: 0,0,0,1
                font_size: '14sp'
                text_size: self.width, None
                halign: 'left'
        BoxLayout:
            size_hint_y: None
            height: 25  
            padding: 50,0,0,0
            Label:
                text: 'Residue: '
                color: 0,0,0,1
                font_size: '14sp'
                text_size: self.width, None
                halign: 'left'
                size_hint_x: root.width * 1/10
            Label:
                text: ' from '
                color: 0,0,0,1
                font_size: '14sp'
                text_size: self.width, None
                halign: 'center'
                size_hint_x: root.width * 1/10
            TextInput:
                id: resdiue_from
                text: ''
                color: 0,0,0,1
                font_size: '14sp'
                text_size: self.width, None
                halign: 'left'
                valign: 'center'
                size_hint_x: root.width * 2/10
                padding_y: 5
            Label:
                text: ' to '
                color: 0,0,0,1
                font_size: '14sp'
                text_size: self.width, None
                halign: 'center'
                size_hint_x: root.width * 1/10
            TextInput:
                id: resdiue_to
                text: ''
                color: 0,0,0,1
                font_size: '14sp'
                text_size: self.width, None
                halign: 'left'
                valign: 'center'
                size_hint_x: root.width * 2/10
                padding_y: 5
            BoxLayout:
                size_hint_x: root.width * 2/10
                

#---------------------------------------------------#
# Screen
<ConfigurationScreen>:
    optimizedButton: optimized_button
    customButton: custom_button

    optimizedTick: optimized_tick
    customTick: custom_tick

    configLayout: config_layout

    canvas.before:
        Color:
            rgba: 0.92, 0.92, 0.92, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size

    FloatLayout:
        Button:
            background_color: 1, 1, 1, 0
            size_hint: None, None
            size: 50, 50
            pos: root.width-100, 30
            on_press: root.manager.changeScreen('load')
            Image:
                source: 'img/next.png'
                size: 50, 50
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True

        Button:
            background_color: 1, 1, 1, 0
            size_hint: None, None
            size: 50, 50
            pos: root.width-200, 30
            on_press: root.manager.changeScreen('receptor')
            Image:
                source: 'img/back.png'
                size: 50, 50
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True

        Button:
            background_color: 1, 1, 1, 0
            size_hint: None, None
            size: 50, 50
            pos: 50, 30
            on_press: root.manager.changeScreen('setting')
            Image:
                source: 'img/setting.png'
                size: 50, 50
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
        BoxLayout:
            size_hint: None, None
            size: root.width * 9/10, root.height * 6/10
            pos: root.width /20, root.height * 2/10
            spacing: 10
            orientation: "vertical"
            Button:
                id: optimized_button
                background_color: 0, 0.588, 0.533, 1
                background_normal: ''
                canvas.after:
                    Color:
                        rgb: 0.9, 0.9, 0.9, 1
                    Line:
                        rectangle: self.x,self.y,self.width,self.height

                size_hint: None, None
                size: self.parent.width, 30
                text: 'Using the optimized configuration available'
                on_press: root.optimizedConfig()
                Image:
                    id: optimized_tick
                    source: 'img/tick.png'
                    size_hint_x: None
                    width: 25
                    center_x: self.parent.center_x - self.parent.width/2 + 40
                    center_y: self.parent.center_y
                    
            Button:
                id: custom_button
                background_color: 0.62, 0.62, 0.62, 1
                background_normal: ''
                canvas.after:
                    Color:
                        rgb: 0.9, 0.9, 0.9, 1
                    Line:
                        rectangle: self.x,self.y,self.width,self.height
                size_hint: None, None
                size: self.parent.width, 30    
                text: 'Using your custom configuration'
                on_press: root.customConfig()
                Image:
                    id: custom_tick
                    source: 'img/tick.png'
                    color: 0,0,0,0
                    size_hint_x: None
                    width: 25
                    center_x: self.parent.center_x - self.parent.width/2 + 40
                    center_y: self.parent.center_y

            ScrollView:
                id: config_layout
                size_hint: None, None
                size: self.parent.width, self.parent.height-80
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                canvas.after:
                    Color:
                        rgb: 0.9, 0.9, 0.9
                    Line:
                        rectangle: self.x,self.y,self.width,self.height
                GridLayout:
                    cols: 1
                    size_hint_y: None
                    height: box_1.height + box_2.height + box_3.height + box_4.height + box_5.height + box_6.height 
                    BoxLayout:
                        id: box_1
                        size_hint_y: None
                        height: 50
                        padding: self.width/8, 0, 20, 0
                        Label:
                            text: ' Use Caver tool'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        CheckBox:
                            size_hint_x: None 
                            width: 30
                            pos: 0,0

                    BoxLayout:
                        id: box_2
                        size_hint_y: None
                        height: 50
                        padding: self.width/8, 0, 20, 0
                        Label:
                            text: ' Use automatic for setting parameter for ligand'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        CheckBox:
                            size_hint_x: None 
                            width: 30
                            pos: 0,0
                            active: True


                    BoxLayout:
                        id: box_3
                        size_hint_y: None
                        height: 50
                        padding: self.width/8, 0, 20, 0
                        Label:
                            text: ' How many times to repeat?'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        TextInput:
                            size_hint: None, 0.6
                            width: 100
                            pos_hint: {'center_y': 0.5}
                            text: '3'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'

                    BoxLayout:
                        id: box_4
                        size_hint_y: None
                        height: 50
                        padding: self.width/8, 0, 20, 0
                        Label:
                            text: ' Do you want to run in backgroud (nohup)?'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        CheckBox:
                            size_hint_x: None 
                            width: 30
                            pos: 0,0

                    BoxLayout:
                        id: box_5
                        size_hint_y: None
                        height: 50
                        padding: self.width/8, 0, 20, 0
                        Label:
                            text: ' Maximum cores for this task'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        TextInput:
                            size_hint: None, 0.6
                            width: 100
                            pos_hint: {'center_y': 0.5}
                            text: '99'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'

                    BoxLayout:
                        id: box_6
                        size_hint_y: None
                        height: 50
                        padding: self.width/8, 0, 20, 0
                        Label:
                            text: ' Auto use GPU to calculate'
                            color: 0,0,0,1
                            disabled_color: 0,0,0,1
                            font_size: '16sp'
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'middle'
                            size_hint_x: None
                            width: self.parent.width/2
                        CheckBox:
                            size_hint_x: None 
                            width: 30
                            pos: 0,0
                            active: True



